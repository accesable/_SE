@model MobilePhoneDistributor_Web.Models.Receipt
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Receipt @Model.ReceiptId</h4>
    <hr />
    <dl class="dl-horizontal">


        <dd>
            @Html.DisplayFor(model => model.Staff.StaffId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReceiptDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReceiptDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Append Details", "AppendDetail", "ReceiptDetails", new { id = Model.ReceiptId }, null)
</p>
@if (Model.ReceiptDetails.Count() == 0)
{
    <p>No Details In This Receipt</p>
}
else
{
    <div>
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.ReceiptDetails.First().PhoneModelId)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ReceiptDetails.First().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceiptDetails.First().UnitAmmount)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.ReceiptDetails)
            {
                <tr>

                    <th>
                        @Html.DisplayFor(ModelItem => item.PhoneModelId)
                    </th>

                    <th>
                        @Html.DisplayFor(ModelItem => item.Quantity)
                    </th>
                    <th>
                        @Html.DisplayFor(ModelItem => item.UnitAmmount)
                    </th>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "ReceiptDetails", new { id = item.ReceiptDetailId }, null) |
                        @Html.ActionLink("Delete", "Delete", "ReceiptDetails", new { id = item.ReceiptDetailId }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
}

<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.ReceiptId }) |*@
    @Html.ActionLink("Back to Receipt List", "Index")
</p>
